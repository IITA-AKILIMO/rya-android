<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseTheme" />

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="customTextInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense
        </item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--         Set the splash screen background, animated icon, and animation duration.-->
        <item name="windowSplashScreenBackground">@color/colorPrimaryDark</item>

        <!--      Use windowSplashScreenAnimatedIcon to add either a drawable or an-->
        <!--        animated drawable. One of these is required.-->
        <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_akilimo_head</item>-->

        <!--        Required for animated icons-->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!--        Set the theme of the Activity that directly follows your splash screen.-->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="SplashThemeCommon" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background_raster</item>
    </style>

    <style name="SplashTheme" parent="SplashThemeCommon">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
